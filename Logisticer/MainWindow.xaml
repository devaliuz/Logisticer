                  PreviewTextInput="PreviewTextInput"
            Width="60"
            Height="30"
            Background="AntiqueWhite"
            FontSize="15"
            Margin="-250,-100,0,0"
                 Text="0"/>
        <TextBox x:Name="TBDDEM"
                  PreviewTextInput="PreviewTextInput"
            Width="60"
            Height="30"
            Background="AntiqueWhite"
            FontSize="15"
            Margin="-250,0,0,0"
                 Text="0"/>
        <Label
            Width="65"
            Height="30"
            FontSize="15"
            Margin="-100,-400,0,0"
            Content="Vorrat"/>
        <TextBox x:Name="TB1SUP"
                  PreviewTextInput="PreviewTextInput"
            Width="60"
            Height="30"
            Background="AntiqueWhite"
            FontSize="15"
            Margin="-100,-300,0,0"
                 Text="0"/>
        <TextBox x:Name="TB2SUP"
                  PreviewTextInput="PreviewTextInput"
            Width="60"
            Height="30"
            Background="AntiqueWhite"
            FontSize="15"
            Margin="-100,-200,0,0"
                   Text="0"/>
        <TextBox x:Name="TB3SUP"
                  PreviewTextInput="PreviewTextInput"
            Width="60"
            Height="30"
            Background="AntiqueWhite"
            FontSize="15"
            Margin="-100,-100,0,0"
                 Text="0"/>
        <Label x:Name="LBOUT"
            Width="400"
            Height="150"
            Margin="500,0,0,0"
            FontSize="15"
            BorderBrush="AntiqueWhite"
            BorderThickness="1"
            />
        <Label x:Name="LBALL"
            Width="300"
            Height="50"
            FontSize="15"
            Content="Gesamtkosten: "
            Margin="400,250,0,0"/>
        <RadioButton x:Name="RDBNWM"
            Width="300"
            Height="50"
            FontSize="20"
            Content="Nord-West-Methode"
            Margin="-300,250,0,0"
            />
        <RadioButton x:Name="RDBMMM"
            Width="300"
            Height="50"
            FontSize="20"
            Content="Matrix-Minimum-Methode"
            Margin="-300,150,0,0"
            IsChecked="True"
            />
        <Button x:Name="BTNOpti"
            Width="200"
            Height="50"
            Content="Optimieren"
            FontSize="20"
            Margin="-400,400,0,0"
            BorderThickness="2" Click="BTNOpti_Click"
                />
    </Grid>
</Window>
